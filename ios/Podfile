source 'https://github.com/CocoaPods/Specs.git'
source 'https://github.com/sunnycows/libsdl2.git'
platform :ios, '9.0'
project 'LK8000.xcodeproj'

target 'LK8000' do

pod 'freetype', '~> 2.6.4'
pod 'libpng', '~> 1.6.18'
pod 'ZipUtilities', '~> 1.7.2'
pod 'boost', '~> 1.59.0'
pod 'glm', '~> 0.9.4.6'
pod 'zziplib'
pod 'sdl2', '~> 2.0.10'
pod 'Fabric'
pod 'Crashlytics'

post_install do |installer|
  installer.pods_project.targets.each do |target|
    if target.name == 'libpng'
      target.build_configurations.each do |config|
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)', 'PNG_ARM_NEON_OPT=0']
      end
    end
  end
end

end
